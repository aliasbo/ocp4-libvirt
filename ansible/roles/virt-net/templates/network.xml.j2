<network connections='1'>
  <name>{{ libvirt_net }}</name>
  <forward mode='nat'>
    <nat>
      <port start='1024' end='65535'/>
    </nat>
  </forward>
  <bridge name='virbr1' stp='on' delay='0'/>
  <ip address='{{ ip_gw | ipaddr('address') }}' netmask='{{ ip_cidr | ipaddr('netmask') }}'>
  </ip>
</network>